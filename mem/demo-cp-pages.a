; Demo copy pages
;
; Copy the 2 first pages of text screen on the 3rd and 4th page

        !cpu 6510
        !src <common/pseudo-reg.a>
        * = $c000

main:
        lda #$04
        sta R2                  ; TEXT screen
        lda #$06
        sta R4                  ; below on the text screen
        ldx #2                  ; 2 pages
        jsr copy_pages

        rts

        !src <mem/copy-pages.a>
