.const  DELAY = 60

:BasicUpstart2(init)

init:
        lda #DELAY
        sta delay

        sei
        lda #<timer_irq
        sta $314
        lda #>timer_irq
        sta $315
        cli
        rts


timer_irq:
        dec delay
        bne !done+
        lda DELAY
        sta delay
        inc $0400
!done:  jmp $ea31

delay:  .byte 0