; Demo - Italic character set

        ;ACME 0.97
        !cpu 6510
        * = $1000
    
        !src <common/pseudo-reg.a>

        !addr DEST = $3800
        CHAR_PTR_BITMASK = $0e


main:
        ; Copy custom font
        lda #>font
        sta R2
        lda #>DEST
        sta R4
        ldx #8
        jsr copy_pages

        ; Point to charset
        lda #CHAR_PTR_BITMASK
        jsr set_charset_loc

        rts


        !align $ff, 0, 0
font:
        !bin <charset/patrickmollohan/zx_spectrum.bin>


        !src <mem/copy-pages.a>
        !src <charset/reloc-charset.a>
